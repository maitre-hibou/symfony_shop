{% extends 'layout/default.html.twig' %}

{% form_theme resetPasswordForm 'form_theme.html.twig' %}

{% block title %}Reset your password | {{ parent() }}{% endblock %}

{% block page_styles %}
    <style type="text/css">
        .form-reset-password {
            max-width: 450px;
            margin: auto;
        }
    </style>
{% endblock %}

{% block body_class %}demo-page{% endblock %}

{% block content %}
    <div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
        {% include 'demo_menu.html.twig' with {activeLink: false} only %}

        <main class="h-100 d-flex flex-column justify-content-center">
            <div class="container">
                <header class="text-center">
                    <img class="mb-4" src="{{ asset('dist/img/logo.png') }}" alt="" width="72" height="72">
                    <h1 class="h3 mb-3 font-weight-normal">Reset your password</h1>
                </header>

                {% include 'common/flashes.html.twig' with {flashes: app.flashes} only %}

                {{ form_start(resetPasswordForm, {attr: {class: 'form-reset-password'}}) }}

                <div class="form-group">
                    {{ form_label(resetPasswordForm.password.first) }}
                    {{ form_widget(resetPasswordForm.password.first, {attr: {class: 'form-control'}}) }}
                    {{ form_errors(resetPasswordForm.password.first) }}
                </div>

                <div class="form-group">
                    {{ form_label(resetPasswordForm.password.second) }}
                    {{ form_widget(resetPasswordForm.password.second, {attr: {class: 'form-control'}}) }}
                    {{ form_errors(resetPasswordForm.password.second) }}
                </div>

                {{ form_widget(resetPasswordForm.submit, {attr: {class: 'btn btn-lg btn-primary'}}) }}

                {{ form_end(resetPasswordForm) }}
            </div>
        </main>

        <footer class="mt-auto text-center">
            <p class="mt-5 mb-0 text-muted">© 2019-2020 | Made with ❤ by <a href="https://www.xpressive.io" target="_blank">xpressive</a>.</p>
        </footer>
    </div>
{% endblock %}
